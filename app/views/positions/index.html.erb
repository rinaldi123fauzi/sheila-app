<div class="wrapper wrapper-content">
  <div id="content">
    <div class="row wrapper border-bottom white-bg page-heading">
      <div class="col-lg-10">
        <h2>List position</h2>
        <ol class="breadcrumb">
          <li>
            <a href="">Home</a>
          </li>
          <li>
            <a href="<%= positions_url %>">List</a>
          </li>
          <li class="active">
            <strong>List</strong>
          </li>
        </ol>
      </div>
    </div>
    <br>
    <div id="content">
      <div class="page-header">
        <%= link_to new_position_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          New Position
        <% end %>
        <!--    <h1>Listing </h1>-->
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover dataTables-example">
          <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <% @positions.each_with_index do |position, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= position.name %></td>
              <td><%= link_to 'Show', position %></td>
              <td><%= link_to 'Edit', edit_position_path(position) %></td>
              <td><%= link_to 'Destroy', position, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do -%>
  <script type="text/javascript" charset="utf-8">
      $(function () {
          $('.dataTables-example').dataTable({
              dom: "<'myfilter'f><'mylength'l>t<'myfilter'i><'p'p>",
              language: {
                  search: "_INPUT_",
                  searchPlaceholder: "Search..."
              }
          });
      });
  </script>
<% end %>
