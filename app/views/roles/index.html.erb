<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>List Roles</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= root_path %>">Home</a>
      </li>
      <li>
        <a href="<%= roles_url %>">List</a>
      </li>
    </ol>
  </div>
</div>
<div id="content">
  <div class="page-header">
    <%= link_to new_role_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Role
    <% end %>
  </div>
  <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-2" data-widget-editbutton="false">
    <!-- widget options:
    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

    data-widget-colorbutton="false"
    data-widget-editbutton="false"
    data-widget-togglebutton="false"
    data-widget-deletebutton="false"
    data-widget-fullscreenbutton="false"
    data-widget-custombutton="false"
    data-widget-collapsed="true"
    data-widget-sortable="false"

    -->
    <!-- widget div-->
    <div>

      <!-- widget edit box -->
      <div class="jarviswidget-editbox">
        <!-- This area used as dropdown edit box -->

      </div>
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover dataTables-example" width="100%">
          <thead>
          <tr>
            <th class="text-center" style="width: 50px">No</th>
            <th>Nama</th>
            <th class="text-center" style="width: 100px">Aksi</th>
          </tr>
          </thead>
          <tbody>
          <% @roles.each_with_index do |role, index| %>
            <tr class="gradeX">
              <td class="text-center"><%= index + 1 %></td>
              <td><%= role.name %></td>
              <td class="text-center" style="width: 100px">
                <%#= link_to '', role, class: 'fa fa-eye btn btn-sm btn-default' %>
                <%= link_to '', edit_role_path(role), class: 'fa fa-pencil btn btn-sm btn-warning' %>
                <%= link_to '', role, method: :delete, data: {confirm: 'Are you sure?'}, class: 'fa fa-trash btn btn-sm btn-danger', title: "Delete" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<% content_for :javascript do -%>
  <script type="text/javascript" charset="utf-8">
      $(function () {
          $('.dataTables-example').dataTable({
              dom: "<'myfilter'f><'mylength'l>t<'myfilter'i><'p'p>",
              language: {
                  search: "_INPUT_",
                  searchPlaceholder: "Search..."
              }
          });

      });
  </script>
<% end %>
