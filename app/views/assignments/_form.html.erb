<div class="panel panel-default">
  <div class="panel-heading">Form assignment</div>
  <div class="panel-body">
    <%= form_for(@assignment, html: {class: "form-horizontal", role: "form"}) do |f| %>
      <% if @assignment.errors.any? %>
        <div class="alert alert-danger alert-dismissable" role="alert">
          <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</h4>

          <ul>
            <% @assignment.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :nama, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :nama, class: "form-control", required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :position, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.collection_select :position_id, Position.order(:id), :id, :name, {prompt: "Select a Jabatan"}, {:class => 'form-control chosen-select'} %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :satuan_kerja, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :satuan_kerja, class: "form-control", required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :nama_tugas, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :nama_tugas, class: "form-control", required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :service_type, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.collection_select :service_type_id, ServiceType.order(:id), :id, :name, {prompt: "Select a Service"}, {:class => 'form-control chosen-select'} %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :spesifik_output, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :spesifik_output, class: "form-control", required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label "Lokasi Kerja", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.collection_select :assignment_place_id, AssignmentPlace.order(:id), :id, :name, {prompt: "Select a Lokasi"}, {:class => 'form-control chosen-select'} %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :pihak_ketiga, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :pihak_ketiga, class: "form-control", required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :lama_penugasan, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :lama_penugasan, class: "form-control", required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :file_assignment, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.file_field :file_assignment, class: "form-control", direct_upload: true, accept: 'image/jpeg, image/jpg, image/png, image/gif, application/pdf', multiple: true %>
          <div style="margin-top: 10px;">
            <% @assignment.file_assignment.each do |file_assignment| %>
              <span style="margin-right: 10px">
                <%= link_to "#{["#{file_assignment.filename}"]}", rails_blob_path(file_assignment, disposition: 'preview'), :target => "_blank" %>
                <%= link_to '', url_for(controller: :assignments, action: :delete_file, attachment_id: file_assignment.id), class: 'fa fa-close', method: "DELETE", data: {confirm: 'Are you sure?'} %>
                <br>
              </span>
            <% end %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>