<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div>

      <h1 class="logo-name"><%= image_tag "PGN_logo.png", width: 100 %></h1>

    </div>
    <h3>Sheila Apps</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class: "m-t", role: "form"}) do |f| %>
      <div class="form-group">
        <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Username", class: "form-control", required: true %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control", required: true %>
      </div>
      <button type="submit" class="btn btn-primary block full-width m-b">Login</button>
    <% end %>
    <%
      if Time.now.year >= 2021
        date = "2020 - " + "#{Time.now.year}"
      else
        date = Time.now.year
        # Time.now.year
      end
    %>
    <p class="m-t"> <small>Sheila &copy; <%= date %></small> </p>
  </div>
</div>