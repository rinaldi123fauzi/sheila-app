<div class="wrapper wrapper-content">
  <div id="content">
    <div class="row wrapper border-bottom white-bg page-heading">
      <div class="col-lg-10">
        <h2>List history_assignment</h2>
        <ol class="breadcrumb">
          <li>
            <a href="">Home</a>
          </li>
          <li>
            <a href="<%= history_assignments_url %>">List</a>
          </li>
          <li class="active">
            <strong>List</strong>
          </li>
        </ol>
      </div>
    </div>
    <br>
    <div id="content">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover dataTables-example">
          <thead>
          <tr>
            <th>No</th>
            <th>Parent assignment</th>
            <th>Status</th>
            <th>By</th>
            <th>Alasan</th>
            <th>Deskripsi</th>
            <th>Info</th>
            <th>Status info</th>
            <th>Tertuju info</th>
            <th></th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <% @history_assignments.each_with_index do |history_assignment, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= history_assignment.parent_assignment_id %></td>
              <td><%= history_assignment.status %></td>
              <td><%= history_assignment.by %></td>
              <td><%= history_assignment.alasan %></td>
              <td><%= history_assignment.deskripsi %></td>
              <td><%= history_assignment.info %></td>
              <td><%= history_assignment.status_info %></td>
              <td><%= history_assignment.tertuju_info %></td>
              <td><%= link_to 'Show', history_assignment %></td>
              <td><%= link_to 'Destroy', history_assignment, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do -%>
  <script type="text/javascript" charset="utf-8">
      $(function () {
          $('.dataTables-example').dataTable({
              dom: "<'myfilter'f><'mylength'l>t<'myfilter'i><'p'p>",
              language: {
                  search: "_INPUT_",
                  searchPlaceholder: "Search..."
              }
          });
      });
  </script>
<% end %>
